# Medical Shift Scheduler Configuration Template
# Copy this file to .env.local and modify the values

# Application Settings
NEXT_PUBLIC_APP_NAME="Medical Shift Scheduler"
NEXT_PUBLIC_APP_VERSION="1.0.0"

# Authentication Settings
NEXT_PUBLIC_DEMO_MODE=true
NEXT_PUBLIC_DEFAULT_ADMIN_USER="admin"
NEXT_PUBLIC_DEFAULT_MANAGER_USER="manager"

# Security Settings
NEXT_PUBLIC_SESSION_TIMEOUT=28800000
NEXT_PUBLIC_ENABLE_PASSWORD_HASHING=true

# Hospital Configuration
NEXT_PUBLIC_DEFAULT_HOSPITAL="spital1"
NEXT_PUBLIC_ENABLE_MULTI_HOSPITAL=true

# Feature Flags
NEXT_PUBLIC_ENABLE_SHIFT_EXCHANGE=true
NEXT_PUBLIC_ENABLE_COVERAGE_ANALYSIS=true
NEXT_PUBLIC_ENABLE_AUTOMATIC_SCHEDULING=true

# Development Settings
NODE_ENV=development

# Production Settings (uncomment for production)
# NODE_ENV=production
# NEXT_PUBLIC_DEMO_MODE=false
# NEXT_PUBLIC_API_URL=https://your-api-url.com
# NEXT_PUBLIC_AUTH_URL=https://your-auth-service.com